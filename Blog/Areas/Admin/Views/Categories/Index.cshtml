@model IEnumerable<CategoryIndexViewModel>


<p>
    <a asp-action="Create" class="btn btn-primary " style="margin-top:10px; margin-bottom:10px;">Kategori Ekle</a>
</p>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Kategori Listesi
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kategori adı</th>
                        <th>Makale Sayısı</th>

                        <th>#</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kategori adı</th>
                        <th>Makale Sayısı</th>

                        <th>#</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Name</td>
                            <td>@c.PostCount</td>

                            <td>
                                @if (c.PostCount == 0)
                                {
                                    <a class="btn btn-sm btn-danger"
                               asp-area="admin"
                               asp-controller="categories"
                               asp-action="delete"
                               asp-route-id="@c.Id">Sil</a> @:|
                                }

                                <a class="btn btn-sm btn-warning"
                               asp-area="admin"
                               asp-controller="categories"
                               asp-action="edit"
                               asp-route-id="@c.Id">Düzenle</a>

                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
